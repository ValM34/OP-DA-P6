{% extends 'base.html.twig' %}

{% block title %}Récupérer le mot de passe{% endblock %}

{% block bodyClass %}password-update{% endblock %}

{% block body %}
	<div class="base-container text-center">
    <h1 class="title-1">Modifier le mot de passe</h1>
    <div class="info-message">Veuillez rentrer votre adresse email pour recevoir un lien de changement de mot de passe.</div>
  </div>
  <div class="form-container">
    <div class="form-subcontainer">
      {{ form_start(recoveryForm) }}
      {{ form_widget(recoveryForm) }}

      <button type="submit" class="btn">Modifier mon mot de passe</button>
      {{ form_end(recoveryForm) }}
      <a class="primary" href="{{ path('login') }}">Vous connaissez votre mot de passe ?</a>
    </div>
  </div>
{% endblock %}
