{% extends 'base.html.twig' %}

{% block title %}
	Liste des figures
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1 class="text-4xl font-semibold mb-4">Liste des catégories</h1>
    <a class="bg-orange-400 px-4 py-2 rounded-full mx-2 text-white font-semibold" href="{{ path('create_category') }}">Ajouter une catégorie</a>
		<ul>
			{% for category in categories %}
				<li>
					<a class="underline text-blue-500 text-xl" href="showone/{{category.id}}">{{category.name}}</a>
					<a class="bg-blue-500 hover:bg-blue-400 px-2 py-1 rounded mx-2 text-white font-semibold" href="update/{{category.id}}">Modifier</a>
					<a class="bg-blue-500 hover:bg-blue-400 px-2 py-1 rounded mx-2 text-white font-semibold" href="delete/{{category.id}}">Supprimer</a>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
