{% extends 'base.html.twig' %}

{% block title %}
	Liste des figures
{% endblock %}

{% block bodyClass %}categories{% endblock %}

{% block body %}
	<div class="base-container">
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="{{ label }}-message">
          <div>{{ message }}</div>
        </div>
      {% endfor %}
    {% endfor %}
		<h1 class="text-center title-1">Liste des catégories</h1>
    <h2 class="title-3">
      <a class="secondary" href="{{ path('category_create') }}"><i class="fas fa-plus"></i> Ajouter une catégorie</a>
    </h2>
		<ul class="category-list">
			{% for category in categories %}
				<li>
					<a class="secondary" href="/category/displayone/{{category.slug}}">{{category.name}}</a>
          <div>
            <a href="/category/update/{{category.slug}}" class="icon-container">
            <i class="fas fa-edit"></i>
            </a>
            <a href="/category/delete/{{category.slug}}" class="icon-container">
              <i class="fas fa-trash"></i>
            </a>
          </div>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
